<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/point_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_summary_trip_name"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="@string/default_marker_name"
            android:textAlignment="center" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_point_delete"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="40dp"
            app:icon="@drawable/ic_delete" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/expanded_point_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/et_summary_trip_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/marker_desc"
            android:textAlignment="center" />

    </RelativeLayout>

</LinearLayout>